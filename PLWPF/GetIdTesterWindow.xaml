<Window x:Class="PLWPF.GetIdTesterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="GetIdTesterWindow" Height="199.634" Width="460">

    



    <Grid x:Name="grid" Margin="0,0,1.6,-3.6" >




        <Label Content="Please enter your ID" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="iDTextBox" Text="{Binding ID, UpdateSourceTrigger=Explicit, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Height="23" Margin="184,40,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="143" />
        <Button Content="Ok"  HorizontalAlignment="Left" Margin="345,40,0,0" VerticalAlignment="Top" Width="64" Height="26" Click="Button_Click"/>
        <Label Content="If you do not exist in the system create a new user:" HorizontalAlignment="Left" Margin="50,92,0,0" VerticalAlignment="Top"/>
        <Button Content="new user" HorizontalAlignment="Left" Margin="334,89,0,0" VerticalAlignment="Top" Width="75" Click="NewUserButton_Click"/>



        
    </Grid>
</Window>
